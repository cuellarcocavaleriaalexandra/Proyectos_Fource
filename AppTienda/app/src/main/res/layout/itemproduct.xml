<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/fondo_item_producto">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fotoProducto"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del Producto"
                android:id="@+id/nombreProducto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DescripciÃ³n del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripcion del Producto"
                android:id="@+id/descripcionProducto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo del Producto"
                android:id="@+id/tipoProducto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Marca del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Marca del Producto"
                android:id="@+id/marcaProducto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unidad del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unidad del Producto"
                android:id="@+id/unidadProducto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio del Producto en BS:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio del Producto"
                android:id="@+id/precioProducto"/>

            <Button

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="presioname"
                android:textColor="@color/white"
                android:id="@+id/botonPrecioname"
                android:background="@drawable/bnt_sesion_google"/>
            <Button

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Eliminame"
                android:textColor="#05aca3"
                android:id="@+id/botonEliminame"
                android:background="@drawable/bnt_sesion_sin_google"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>