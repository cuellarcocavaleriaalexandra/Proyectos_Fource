<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuscadorFragment"
    android:background="#E5FCFB">




    <TextView
        android:layout_width="306dp"
        android:layout_height="68dp"
        android:text="Ingresa el nombre del Producto para buscarlo"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="376dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerssTipoProduct"
            android:layout_width="match_parent"
            android:layout_height="590dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/DatoBuscarNombre"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/fondo_edittex1"
        android:drawablePadding="-20dp"
        android:hint="Ingrese el Nombre del Producto"
        android:paddingLeft="10dp"
        android:textColorHint="#05aca3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/buttonBuscar"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/bnt_sesion_google"
        android:drawableStart="@drawable/baseline_search_24"
        android:drawablePadding="-10dp"
        android:paddingLeft="10dp"
        android:text="Buscar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />


</androidx.constraintlayout.widget.ConstraintLayout>