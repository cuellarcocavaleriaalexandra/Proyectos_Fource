<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfilFragment"
    android:background="#E5FCFB">

    <ImageView
        android:id="@+id/imagen_perfil"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/baseline_person_pin_24"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/Perfil_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imagen_perfil"
        app:layout_constraintStart_toEndOf="@+id/imagen_perfil"
        app:layout_constraintTop_toTopOf="@+id/imagen_perfil"
        tools:text="Nombre de Usuario" />

    <TextView
        android:id="@+id/Imagen_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawablePadding="16dp"
        android:padding="16dp"
        android:text="Email"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/baseline_email_24"
        app:drawableTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen_perfil" />


    <TextView
    android:id="@+id/Email_perfil"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:padding="16dp"
    android:textAlignment="viewEnd"
    app:layout_constraintBottom_toBottomOf="@+id/Imagen_email"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toEndOf="@+id/Imagen_email"
    app:layout_constraintTop_toTopOf="@+id/Imagen_email"
    tools:text="ejemplode@email.com" />


    <Button
        android:id="@+id/Iniciar_Admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bnt_sesion_google"
        android:clickable="true"
        android:drawableStart="@drawable/baseline_admin_panel_settings_24"
        android:drawablePadding="-30dp"
        android:paddingLeft="25dp"
        android:text="Iniciar el modo Administrador"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/buttonsesion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bnt_sesion_sin_google"
        android:drawableStart="@drawable/baseline_logout_24"
        android:drawablePadding="-30dp"
        android:paddingLeft="25dp"
        android:text="Cerrar sesion"
        android:textColor="#05aca3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.930" />

    <Button
        android:id="@+id/verIntegrantes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bnt_sesion_google"
        android:clickable="true"
        android:drawablePadding="-30dp"

        android:text="Integrantes encargados en el desarrollo"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

</androidx.constraintlayout.widget.ConstraintLayout>