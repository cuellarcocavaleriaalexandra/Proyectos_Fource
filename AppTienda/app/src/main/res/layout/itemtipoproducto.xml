<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:background="@drawable/fondo_item_producto">

        <ImageView
            android:id="@+id/fotoProducto"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/nombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del Producto" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/descripcionProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripcion del Producto" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tipoProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo del Producto" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Marca del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/marcaProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Marca del Producto" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unidad del Producto:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/unidadProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unidad del Producto" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio del Producto en BS:"
                android:textStyle="bold"
                android:textColor="#05aca3"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/precioProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio del Producto"/>

            <Button
                android:id="@+id/botonPedido"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Hacer pedido"
                android:textColor="@color/white"
                android:background="@drawable/bnt_sesion_google"/>

        </LinearLayout>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewHacerPedido"
        android:layout_width="400dp"
        android:layout_height="720dp"
        android:background="@drawable/bnt_sesion_sin_google"
        android:visibility="gone"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonCerrarP"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_cerrar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.837"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.007" />

            <TextView
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_item_producto2"
                android:text="Hacer pedido del producto"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.125"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.061" />

            <EditText
                android:id="@+id/DatoNombrePedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:enabled="false"
                android:hint="Nombre del producto"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.258"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.145" />

            <EditText
                android:id="@+id/DatoDescripcionPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:enabled="false"
                android:hint="Descripción del producto"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.216" />

            <EditText
                android:id="@+id/DatoMarcaPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:enabled="false"
                android:hint="Marca del producto"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.266"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.357" />

            <EditText
                android:id="@+id/DatoUnidadPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:enabled="false"
                android:hint="Unidad del producto"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.427" />

            <EditText
                android:id="@+id/DatoPrecioPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:enabled="false"
                android:hint="Precio del producto"
                android:inputType="numberDecimal"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.266"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/DatoUbicacionPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Ubicación de la entrega"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.266"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.57" />

            <EditText
                android:id="@+id/DatoDestinatarioPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Nombre Completo del Destinatario"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.266"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.641" />


            <EditText
                android:id="@+id/DatoCantidadPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Cantidad a ordenar"
                android:inputType="number"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.266"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.71" />


            <EditText
                android:id="@+id/DatoNumero"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:hint="Introduzca su teléfono"
                android:inputType="number"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.78" />

            <EditText
                android:id="@+id/DatoTipoPedido"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_edittex1"
                android:drawablePadding="-30dp"
                android:enabled="false"
                android:hint="Tipo de producto"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                android:textColorHint="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.285" />

            <EditText
                android:id="@+id/EditCotizar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/fondo_item_producto"
                android:enabled="false"
                android:hint="0 bs."
                android:textAlignment="center"
                android:textColor="#05aca3"
                android:textColorHint="#05aca3"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.824"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.885" />

            <Button
                android:id="@+id/buttonCotizar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bnt_sesion_google"
                android:text="Cotizar"
                android:textColor="#ffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.882" />

            <Button
                android:id="@+id/buttonPagar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_item_producto"
                android:text="Pagar"
                android:textColor="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.976" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEscogerPedido"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:background="@drawable/bnt_sesion_sin_google"
        android:visibility="gone"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/buttonCerrarEP"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_cerrar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.905"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:layout_width="368dp"
                android:layout_height="40dp"
                android:background="@drawable/fondo_item_producto2"
                android:text="Escoge el tipo de pedido"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.125"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.281" />

            <Button
                android:id="@+id/buttonRecoger"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_item_producto"
                android:text="Recoger"
                android:textColor="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.804"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.843" />

            <Button
                android:id="@+id/buttonDelibery"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_item_producto"
                android:text="Delivery"
                android:textColor="#05aca3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.108"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.843" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>